    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/black_80_opa" android:layout_gravity="center" android:id="@+id/qr_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/open_sans_bold"/>
