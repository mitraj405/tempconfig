<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/PrimaryColor" android:layout_width="match_parent" android:layout_height="match_parent" ads:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:overScrollMode="never">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/image" android:background="@android:color/white" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/title_bar">
                <TextView android:textSize="14dp" android:textColor="@android:color/black" android:gravity="center" android:id="@+id/title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Pay with mobile wallet" fontFamily="fonts/Roboto-Regular.ttf"/>
                <ImageView android:id="@+id/payment_mode_image" android:layout_width="wrap_content" android:layout_height="55dp" android:layout_marginTop="10dp" android:src="@drawable/ic_irctc_wallet"/>
            </LinearLayout>
            <TextView android:textSize="16dp" android:textColor="@color/light_yellow" android:gravity="right" android:id="@+id/amount" android:background="@color/newbooking_selector_black" android:paddingTop="15dp" android:paddingRight="20dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Total Fare:   Rs." android:layout_below="@+id/image" fontFamily="fonts/Roboto-Regular.ttf"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/hint_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/amount">
                <TextView android:textSize="12dp" android:textColor="@color/white_90_opa" android:id="@+id/pgTxnMsg" android:background="@color/gray_theme" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" fontFamily="fonts/Roboto-Regular.ttf"/>
                <TextView android:textSize="14dp" android:textColor="@color/white" android:background="@color/PrimaryColor" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Please enter the one time password sent to the mobile number" fontFamily="fonts/Roboto-Regular.ttf"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/sbiBuddyOtpText_layout" android:background="@color/gray_theme" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/hint_layout">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="4">
                    <LinearLayout android:orientation="vertical" android:paddingRight="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3">
                        <EditText android:textSize="20dp" android:textColor="@color/white" android:textColorHint="@color/white_60_opa" android:gravity="center_horizontal" android:id="@+id/sbiBuddyOtpText" android:background="@null" android:paddingLeft="10dp" android:paddingTop="20dp" android:paddingRight="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/otp" android:inputType="number" android:textCursorDrawable="@drawable/white_cursor" fontFamily="fonts/Roboto-Regular.ttf"/>
                        <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="2dp"/>
                    </LinearLayout>
                    <TextView android:textSize="12dp" android:textColor="@color/PrimaryColor" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_resend_otp" android:background="@drawable/white_btn_state" android:layout_width="0dp" android:layout_height="35dp" android:layout_marginTop="10dp" android:layout_marginRight="8dp" android:layout_marginBottom="5dp" android:text="@string/resend_OTP" android:layout_weight="1" android:layout_alignParentRight="true" fontFamily="fonts/Roboto-Medium.ttf"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="22dp" android:textColor="@color/PrimaryColor" android:gravity="center" android:id="@+id/sbiBuddyOtpVerify" android:background="@drawable/white_btn_state" android:layout_width="260dp" android:layout_marginTop="53dp" android:layout_marginBottom="30dp" android:text="@string/sbi_buddy_verify" android:layout_below="@+id/sbiBuddyOtpText_layout" android:layout_centerHorizontal="true" fontFamily="fonts/Roboto-Medium.ttf" style="@style/btn.primary.blue"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
