<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/pnr_input_bottom_rl" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:background="@drawable/below_popup_white_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/pnr_input_ll" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:id="@+id/ll_aadhaar_layout" android:background="@color/white_90_opa" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="9dp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/connecting_journey_msg" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/Connecting_journey_mgs" android:layout_weight="3" android:fontFamily="@font/open_sans_bold"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/tv_pnr" android:background="@drawable/edittextborder" android:padding="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/Please_Enter_PNR" android:singleLine="true" android:digits="1234567890" android:inputType="number"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/ll_otp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="55dp" android:weightSum="10">
                    <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="6.5">
                        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/tv_otp" android:background="@drawable/edittextborder" android:padding="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/Please_Enter_OTP" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="1234567890" android:inputType="textCapWords"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <RelativeLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="3">
                        <TextView android:textSize="9dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/resend_opt" android:background="@drawable/round_red_fill" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/Re_Send" android:layout_weight="3" android:fontFamily="@font/open_sans" android:backgroundTint="@color/blue"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:id="@+id/ll_status" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/status" android:background="@drawable/edittextborder" android:padding="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/Status" android:inputType="textCapWords"/>
                </LinearLayout>
                <LinearLayout android:gravity="center" android:id="@+id/ll_submit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10">
                    <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_submit_btn" android:background="@drawable/round_red_fill" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_120" android:layout_marginRight="@dimen/dp_120" android:text="@string/submit" android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
