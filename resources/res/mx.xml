<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/bg_gradient" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/userverify" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
        <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/progressStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:inputType="textMultiLine" android:textAlignment="center"/>
        <ProgressBar android:layout_gravity="center_horizontal" android:id="@+id/progressBarLoginWait" android:layout_width="wrap_content" android:layout_height="wrap_content" android:indeterminate="true" android:indeterminateTintMode="src_atop"/>
    </LinearLayout>
    <com.google.android.gms.ads.admanager.AdManagerAdView android:gravity="center" android:id="@+id/multiple_ad_sizes_view" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/userverify" android:layout_centerHorizontal="true" ads:adSizes="MEDIUM_RECTANGLE,LARGE_BANNER,BANNER" ads:adUnitId="@string/top_verify_user"/>
    <RelativeLayout android:id="@+id/otp_verify" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <ScrollView android:background="@drawable/below_popup_white_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <TextView android:textSize="16dp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:text="@string/otp_verification" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/header_msg" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="20dp" android:hint="OTP has been sent to your register number" android:singleLine="true" android:windowSoftInputMode="adjustResize"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="25dp" android:layout_marginRight="20dp">
                    <EditText android:textSize="20dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/otp_input" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp" android:hint="@string/otp" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="1" android:inputType="number"/>
                    <TextView android:textColor="@color/white" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/resend_opt" android:background="@drawable/round_red_fill" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="9dp" android:text="@string/resend" android:layout_weight="3" android:fontFamily="@font/open_sans" android:backgroundTint="@color/red"/>
                </LinearLayout>
                <TextView android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_resend_timmer" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="" android:singleLine="true" android:windowSoftInputMode="adjustResize"/>
                <RelativeLayout android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="10dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/otp_verify_ll" android:background="@drawable/round_red_fill" android:paddingLeft="17dp" android:paddingRight="17dp" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/Verify_OTP" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>
