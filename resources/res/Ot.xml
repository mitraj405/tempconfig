<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/mp_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="name" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/mp_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="age, seat preference, ---" android:fontFamily="@font/open_sans"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/id_verify_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Card_Type" android:fontFamily="@font/open_sans"/>
                <TextView android:textColor="@color/black_90_opa" android:id="@+id/tv_verified_psgn" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" " android:drawableRight="@drawable/ic_veg" android:drawablePadding="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/card_type_ll" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12dp" android:textColor="@color/black_90_opa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Concession_Card_No" android:fontFamily="@font/open_sans"/>
                <TextView android:textSize="12dp" android:textColor="@color/black_90_opa" android:id="@+id/tv_card_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="----" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:id="@+id/valid_date_ll" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12dp" android:textColor="@color/black_90_opa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/idCard_valid_UptoDate" android:fontFamily="@font/open_sans"/>
                <TextView android:textSize="12dp" android:textColor="@color/black_90_opa" android:id="@+id/tv_valid_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dd/mm/yyyy" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12dp" android:textColor="@color/black_90_opa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/dateof_Birth_on_Id" android:fontFamily="@font/open_sans"/>
                <TextView android:textSize="12dp" android:textColor="@color/black_90_opa" android:id="@+id/date_of_birth" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="dd/mm/yyyy" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/edit_psgn" android:background="@color/white" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/edit" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/blue"/>
    </RelativeLayout>
    <View android:background="@color/lightgreytxt" android:layout_width="match_parent" android:layout_height="0.5dp"/>
</LinearLayout>
