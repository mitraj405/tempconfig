<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/bg_gradient" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="110dp" android:layout_weight="6">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <ImageView android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="30dp" android:src="@drawable/indian_railways_logo" android:layout_alignParentLeft="true" android:layout_centerHorizontal="true"/>
                    <ImageView android:layout_width="60dp" android:layout_height="60dp" android:layout_marginRight="30dp" android:src="@drawable/ic_launcher192" android:layout_alignParentRight="true" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5" android:text="@string/registration" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.6">
                <FrameLayout android:layout_gravity="center" android:background="@drawable/round_white_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@drawable/round_white_fill" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_mobile_no" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="@dimen/size10" android:layout_marginRight="30dp" android:hint="@string/mobile_number_reg" android:maxLength="10" android:inputType="number" android:fontFamily="@font/open_sans"/>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_email" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp" android:hint="@string/Email_Id" android:inputType="textEmailAddress" android:fontFamily="@font/open_sans"/>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_user_name" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp" android:hint="@string/username" android:maxLength="35" android:inputType="text" android:fontFamily="@font/open_sans"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size8" android:weightSum="2">
                            <com.google.android.material.textfield.TextInputLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="30dp" android:layout_marginTop="1dp" android:layout_marginRight="0dp" android:layout_weight="1.79" ads:hintEnabled="false">
                                <com.google.android.material.textfield.TextInputEditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/et_password" android:background="@color/white" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/password" android:inputType="textPassword" android:contentDescription=" " android:drawableTint="@color/lightdark"/> //space added in content discription because of googletalk error by apoorv 
                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView android:id="@+id/tv_pwd_show_hide" android:layout_width="25dp" android:layout_height="wrap_content" android:drawableRight="@drawable/visibility_off" android:contentDescription="@string/showPassword" android:drawableTint="@color/lightdark"/>
                        </LinearLayout>
                        <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size8" android:weightSum="2">
                            <com.google.android.material.textfield.TextInputLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_marginLeft="30dp" android:layout_marginTop="1dp" android:layout_marginRight="0dp" android:layout_weight="1.79" ads:hintEnabled="false">
                                <com.google.android.material.textfield.TextInputEditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/et_confirm_password" android:background="@color/white" android:longClickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/Confirm_Password" android:inputType="textPassword" android:contentDescription=" " android:drawableTint="@color/lightdark"/> //space added in content discription because of googletalk error by apoorv 
                            </com.google.android.material.textfield.TextInputLayout>
                            <TextView android:id="@+id/tv_conf_pwd_show_hide" android:layout_width="25dp" android:layout_height="wrap_content" android:drawableRight="@drawable/visibility_off" android:contentDescription="@string/showPassword" android:drawableTint="@color/lightdark"/>
                        </LinearLayout>
                        <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp">
                            <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_first_name" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="10dp" android:hint="@string/first_name" android:layout_weight="1" android:inputType="textVisiblePassword" android:fontFamily="@font/open_sans"/>
                            <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_middle_name" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="@string/middle_name" android:layout_weight="1" android:inputType="textVisiblePassword" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_last_name" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp" android:hint="@string/last_name" android:inputType="textEmailAddress" android:fontFamily="@font/open_sans"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp">
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_dob" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="1dp" android:hint="@string/dob_registration" android:layout_weight="1" android:inputType="number" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                            <TextView android:id="@+id/dob_clender" android:paddingTop="10dp" android:layout_width="25dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:drawableLeft="@drawable/calender_small" android:contentDescription="@string/dobCalendar" android:drawableTint="@color/lightdark"/>
                            <RadioGroup android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/ll_gender" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="5dp" android:layout_weight="0.8">
                                <RadioButton android:textSize="12dp" android:textColor="@color/lightdark" android:id="@+id/tv_male" android:paddingLeft="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/radiobutton" android:text="@string/male_radio_btn" android:layout_weight="1" android:contentDescription="@string/Male" android:fontFamily="@font/open_sans"/>
                                <RadioButton android:textSize="12dp" android:textColor="@color/lightdark" android:id="@+id/tv_female" android:paddingLeft="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/radiobutton" android:text="@string/female_radio_btn" android:layout_weight="1" android:contentDescription="@string/female" android:fontFamily="@font/open_sans"/>
                                <RadioButton android:textSize="12dp" android:textColor="@color/lightdark" android:id="@+id/tv_transgender" android:paddingLeft="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/radiobutton" android:text="@string/trans_radio_btn" android:layout_weight="1" android:contentDescription="@string/transgender" android:fontFamily="@font/open_sans"/>
                            </RadioGroup>
                        </LinearLayout>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/nationality" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp" android:hint="@string/nationality" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp">
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/secret_question" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:hint="@string/security_Question" android:drawableRight="@drawable/spinner_downwards" android:layout_weight="1" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                            <EditText android:enabled="false" android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_security_answer" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/security_answer" android:layout_weight="1" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        </LinearLayout>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/occupation" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp" android:hint="@string/occupation" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/marital_status" android:background="@drawable/edittextborder" android:paddingTop="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="7dp" android:layout_marginRight="30dp" android:hint="@string/marital_status" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_next" android:background="@drawable/round_red_fill" android:paddingLeft="20dp" android:paddingTop="7dp" android:paddingRight="20dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginBottom="@dimen/dimen_10" android:text="@string/next" android:fontFamily="@font/open_sans_bold"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <TextView android:textSize="10dp" android:textColor="@color/white" android:layout_gravity="right" android:id="@+id/tv_user_guide" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="35dp" android:layout_marginBottom="55dp" android:text="@string/User_Guide" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center" android:id="@+id/registration_bottom_ads" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" ads:adSize="BANNER" ads:adUnitId="@string/registration_bottom_ads"/>
</RelativeLayout>
