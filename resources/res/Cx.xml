<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" ads:cardElevation="2dp">
    <androidx.cardview.widget.CardView android:id="@+id/ticket_details" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/booking_ticket" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginRight="7dp" android:src="@drawable/train_grey"/>
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                            <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gatimaan exp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                            <TextView android:textSize="14dp" android:textColor="@color/colorAccent" android:id="@+id/train_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="(12050)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/tv_pnr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/pnr" android:layout_toLeftOf="@+id/pnr" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                            <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/pnr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10001675905" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/fromcidtycode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DELHI" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                        <ImageView android:layout_width="25dp" android:layout_height="10dp" android:layout_marginLeft="0dp" android:layout_marginTop="5dp" android:src="@drawable/arrow"/>
                        <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/tocitycode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="0dp" android:text="GWALIOR" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="9dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/journey_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:text="Tue, 05 feb" android:fontFamily="@font/open_sans"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="11dp">
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="10dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/booked_on" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/booking_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <RelativeLayout android:id="@+id/ticket_status_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/ticket_status_l" android:background="#efeff4" android:paddingLeft="@dimen/dimen_5" android:paddingTop="@dimen/dp_2" android:paddingBottom="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/status" android:layout_toLeftOf="@+id/tv_ticket_status" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                    <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tv_ticket_status" android:background="#efeff4" android:paddingTop="@dimen/dp_2" android:paddingRight="@dimen/dimen_5" android:paddingBottom="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="BoooKEd" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/metro_ticket_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="11dp" android:textColor="@color/green" android:id="@+id/view_dmrc_tickets_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=""/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View android:id="@+id/viewmargin" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="10dp"/>
    </androidx.cardview.widget.CardView>
    <com.google.android.gms.ads.admanager.AdManagerAdView android:id="@+id/my_booking_center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_below="@+id/ticket_details" android:layout_centerHorizontal="true" ads:adSize="BANNER" ads:adUnitId="@string/my_booking_center"/>
</RelativeLayout>
