<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:padding="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
    <ImageView android:layout_gravity="center_vertical" android:id="@+id/wallet_logo" android:background="@color/white" android:padding="10dp" android:layout_width="match_parent" android:layout_height="50dp" android:src="@drawable/mobikwik_logo"/>
    <TextView android:textSize="13dp" android:textColor="@color/dark" android:id="@+id/wallet_text" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Please enter your register Mobikwik mobile number.\10An OTP (valid for next 15 mins.)has been sent your mobile number" android:drawableLeft="@drawable/check" android:drawablePadding="3dp" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
    <EditText android:textSize="14dp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/wallet_mobno" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:layout_marginBottom="@dimen/dimen_5" android:hint="Contact Number" android:singleLine="true" android:maxLength="10" android:inputType="number"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="7dp">
        <EditText android:enabled="false" android:textSize="14dp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/wallet_otp" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="OTP" android:singleLine="true" android:maxLength="10" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
    </LinearLayout>
    <TextView android:textSize="15dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/wallet_send_otp" android:background="@color/white" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/send_otp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/blue"/>
    <View android:layout_gravity="center_vertical" android:background="@color/lightgreytxt" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginLeft="2dp" android:layout_marginTop="15dp" android:layout_marginRight="2dp"/>
    <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/wallet_txn_charge" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
</LinearLayout>
