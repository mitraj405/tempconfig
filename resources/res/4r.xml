<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/file_tdr_ll" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
    <LinearLayout android:orientation="vertical" android:id="@+id/tdr_layout_main" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_10">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="5dp" android:layout_marginRight="7dp" android:src="@drawable/train_grey"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gatimaan exp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                    <TextView android:textSize="13dp" android:textColor="@color/colorAccent" android:id="@+id/train_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="(12050)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/fromcidtycode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DELHI" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                    <ImageView android:layout_width="25dp" android:layout_height="10dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:src="@drawable/arrow"/>
                    <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tocitycode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="GWALIOR" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="10dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/pnr" android:layout_toLeftOf="@+id/pnr" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
                <TextView android:textSize="10dp" android:textColor="@color/red" android:id="@+id/pnr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10001675905" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView android:textSize="9dp" android:textColor="@color/colorAccent" android:id="@+id/journey_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="47dp" android:text="Tue, 05 feb" android:fontFamily="@font/open_sans"/>
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/booking_dateLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="47dp" android:layout_marginTop="12dp" android:text="@string/booked_on" android:fontFamily="@font/open_sans"/>
            <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/booking_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="28 jan, 2019" android:layout_toRightOf="@+id/booking_dateLabel" android:fontFamily="@font/open_sans"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
