<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/linear_layout_collapse" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rlp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/iv_large_icon" android:layout_width="@dimen/height_width24" android:layout_height="@dimen/height_width24" android:scaleType="fitXY" android:contentDescription="@string/todo" android:layout_alignParentStart="true"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/llp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_alignParentTop="true" android:layout_toEndOf="@+id/iv_large_icon">
            <RelativeLayout android:layout_gravity="top" android:id="@+id/rlc1" android:layout_width="match_parent" android:layout_height="wrap_content" android:includeFontPadding="false">
                <TextView android:id="@+id/tv_temp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:includeFontPadding="false" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
                <RelativeLayout android:id="@+id/tv_message_temp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/ll_timer_notification_" android:layout_toEndOf="@+id/tv_temp">
                    <TextView android:textSize="@dimen/text_15sp" android:textStyle="bold" android:textColor="@color/iz_notificationMBg" android:ellipsize="end" android:layout_gravity="left|center_vertical|center_horizontal|center|start" android:id="@+id/tv_message" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:includeFontPadding="false" android:lineSpacingExtra="-1sp"/>
                </RelativeLayout>
                <RelativeLayout android:id="@+id/ll_timer_notification_" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                    <ImageView android:id="@+id/tv_close_icon" android:visibility="gone" android:layout_width="@dimen/height_18dp" android:layout_height="@dimen/height_18dp" android:src="@drawable/iz_close_btn" android:scaleType="fitXY" android:layout_centerInParent="true" android:contentDescription="@string/todo"/>
                    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/tv_ll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true" android:layoutDirection="ltr">
                        <ImageView android:layout_width="@dimen/height_width17" android:layout_height="@dimen/height_width17" android:src="@drawable/iz_vector" android:scaleType="center" android:contentDescription="@string/todo" android:layout_marginEnd="@dimen/margin_2dp"/>
                        <Chronometer android:textStyle="normal" android:textColor="@color/iz_chronometer" android:id="@+id/tv_notification_timer_" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_gravity="top" android:id="@+id/rlc2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_timer_notification_for_below" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layoutDirection="ltr" android:layout_alignParentStart="true">
                    <ImageView android:layout_gravity="center" android:layout_width="@dimen/height_width14" android:layout_height="@dimen/height_width14" android:src="@drawable/iz_vector_below" android:adjustViewBounds="true" android:contentDescription="@string/todo"/>
                    <Chronometer android:textColor="@color/iz_notificationMBg" android:layout_gravity="center" android:id="@+id/tv_notification_timer_for_below" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:includeFontPadding="false" android:layout_marginStart="@dimen/margin_3dp" style="@style/TextAppearance.Compat.Notification.Info"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/text_14sp" android:textColor="@color/iz_notificationMBg" android:ellipsize="end" android:id="@+id/tv_dismissed_" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/iz_cta_dismissed" android:singleLine="true" android:includeFontPadding="false" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_centerVertical="true" style="@style/TextAppearance.Compat.Notification.Title"/>
                <TextView android:textColor="@color/iz_chronometer" android:gravity="center" android:id="@+id/tv_display_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:includeFontPadding="false" android:layout_centerVertical="true" android:layout_alignParentEnd="true" style="@style/TextAppearance.Compat.Notification.Info"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
