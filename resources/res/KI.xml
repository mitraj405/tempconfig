<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/lhs_panel" android:background="@android:color/white" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentStart="true" style="@style/header">
        <ImageButton android:id="@+id/header_back_button" android:layout_marginLeft="@dimen/dimen_3" android:layout_marginTop="@dimen/dimen_3" android:layout_marginBottom="@dimen/dimen_3" android:src="@drawable/ic_arrow_back_white_24dp" android:scaleType="fitXY" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true" android:layout_centerVertical="true" style="@style/IconClickable"/>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_centerInParent="true">
            <ImageView android:textSize="16.67dp" android:textColor="#ffffff" android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/tv_left_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/paytm_top_logo" android:singleLine="true" android:layout_centerVertical="true"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/lhs_panel">
        <TextView android:textSize="@dimen/sp_15" android:textColor="@color/text_grey_subdued" android:gravity="center" android:id="@+id/user_action_desc_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginTop="@dimen/dimen_20" android:layout_marginRight="@dimen/dimen_20"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/otp_btn__parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginRight="@dimen/dimen_20" android:layout_marginBottom="@dimen/dimen_30" android:layout_centerInParent="true">
            <Button android:textSize="@dimen/sp_18" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/otp_submit_screen_submit_btn" android:background="@drawable/proceed_button_selector" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_50" android:text="@string/submit"/>
            <Button android:textSize="@dimen/sp_18" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/otp_submit_screen_login_btn" android:background="@drawable/proceed_button_selector" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_50" android:text="@string/login" android:layout_centerInParent="true"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/otp_edittext__parent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_20" android:layout_marginRight="@dimen/dimen_20" android:layout_marginBottom="@dimen/dimen_30" android:layout_above="@+id/otp_btn__parent">
            <RelativeLayout android:id="@+id/otp_et_parent" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="@dimen/sp_13" android:textColorHint="@android:color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/otp_et" android:background="@drawable/selector_edit_text" android:focusable="true" android:focusableInTouchMode="true" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_50" android:hint="@string/otp" android:maxLength="6" android:inputType="numberDecimal"/>
                <TextView android:textSize="@dimen/sp_14" android:textColor="@color/pink_btn" android:id="@+id/otp_submit_screen_resend_otp_tv" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/resend_otp" android:layout_alignBaseline="@+id/otp_et" android:layout_alignParentRight="true"/>
                <TextView android:textSize="@dimen/sp_14" android:textColor="@color/text_grey_subdued" android:id="@+id/otp_submit_screen_otp_sent_tv" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/msg_otp_sent" android:layout_alignBaseline="@+id/otp_et" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <EditText android:textSize="@dimen/sp_13" android:textColorHint="@android:color/black" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/mobile_et" android:background="@drawable/selector_edit_text" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="@dimen/dimen_50" android:hint="@string/mobile_no" android:maxLength="10" android:inputType="number"/>
            <TextView android:textSize="@dimen/sp_12" android:textColor="@color/error_color" android:gravity="left" android:id="@+id/otp_submit_error" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_5" android:layout_below="@+id/otp_et"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/text_grey_subdued" android:textColorLink="@color/light_blue" android:gravity="center" android:id="@+id/termcondition_string" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30" android:layout_marginRight="@dimen/dimen_30" android:layout_marginBottom="@dimen/dimen_30" android:text="@string/term_condition" android:layout_alignParentBottom="true" android:lineSpacingExtra="@dimen/dimen_3"/>
        <TextView android:textSize="@dimen/otp_13_sp" android:textColor="@color/pink_btn" android:gravity="center" android:id="@+id/otp_submit_screen_desc_hint_tv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20" android:text="@string/otp_screen_desc_hint_string" android:layout_below="@+id/otp_btn__parent"/>
        <RelativeLayout android:gravity="center" android:id="@+id/otp_submit_screen_timer_parent_rl" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_50" android:layout_below="@+id/otp_submit_screen_desc_hint_tv" android:layout_alignParentRight="true">
            <TextView android:textSize="@dimen/sp_18" android:textStyle="bold" android:id="@+id/otp_submit_screen_timer_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
            <TextView android:textColor="@color/light_grey" android:id="@+id/otp_submit_screen_sending_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:text="@string/sending_otp" android:layout_below="@+id/otp_submit_screen_timer_tv" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <ProgressBar android:id="@+id/progress_bar_login" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>
