<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/ticket_details" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" ads:cardBackgroundColor="@color/white">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_marginRight="7dp" android:src="@drawable/train_grey"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gatimaan exp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                    <TextView android:textSize="14dp" android:textColor="@color/colorAccent" android:id="@+id/train_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="(12050)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/fromcitycode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delhi" android:fontFamily="@font/open_sans"/>
                    <ImageView android:layout_gravity="center" android:layout_width="25dp" android:layout_height="10dp" android:layout_marginLeft="5dp" android:src="@drawable/arrow"/>
                    <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tocitycode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="Gwalior" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/pnr" android:layout_toLeftOf="@+id/pnr" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/pnr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10001675905" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/journey_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:text="Tue, 05 feb" android:fontFamily="@font/open_sans"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="10dp" android:textColor="@color/lightdark" android:id="@+id/booking_date_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:layout_marginTop="12dp" android:text="@string/booked_on" android:fontFamily="@font/open_sans"/>
            <TextView android:textSize="10dp" android:textColor="@color/lightdark" android:id="@+id/booking_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="28 jan, 2019" android:fontFamily="@font/open_sans"/>
            <RelativeLayout android:id="@+id/ticket_status_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/ticket_status_l" android:background="#efeff4" android:paddingLeft="@dimen/dimen_5" android:paddingTop="@dimen/dp_2" android:paddingBottom="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Status_loyalty" android:layout_toLeftOf="@+id/tv_ticket_status" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tv_ticket_status" android:background="#efeff4" android:paddingTop="@dimen/dp_2" android:paddingRight="@dimen/dimen_5" android:paddingBottom="@dimen/dp_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View android:id="@+id/viewmargin" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="10dp"/>
</androidx.cardview.widget.CardView>
