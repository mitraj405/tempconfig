<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/bg_gradient" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="110dp" android:layout_weight="6">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                    <ImageView android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="30dp" android:src="@drawable/indian_railways_logo" android:layout_alignParentLeft="true" android:layout_centerHorizontal="true"/>
                    <ImageView android:layout_width="60dp" android:layout_height="60dp" android:layout_marginRight="30dp" android:src="@drawable/ic_launcher192" android:layout_alignParentRight="true" android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/dimen_5" android:text="@string/registration" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:textAllCaps="true"/>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1.6">
                <FrameLayout android:layout_gravity="center" android:background="@drawable/round_white_fill" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/residence_ll" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_address_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="@dimen/dp_40" android:layout_marginRight="30dp" android:hint="@string/Residence_Address" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <LinearLayout android:layout_gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="8dp" android:layout_marginRight="30dp">
                            <CheckBox android:id="@+id/cb_same_office" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp" android:checked="false" android:button="@drawable/irctc_checkbox"/>
                            <TextView android:textSize="12dp" android:textColor="@color/colorAccent" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Copy_residence_address" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans" android:drawableTint="@color/dark"/>
                        </LinearLayout>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_street_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/street" android:maxLength="30" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_area_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/area" android:maxLength="30" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/country_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/Select_Country" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_pincode_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/pincode" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/city_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/Select_City" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_other_city_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/Other_city" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <TextView android:enabled="false" android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_state_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/state" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <EditText android:enabled="false" android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_state_other_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/Other_state" android:inputType="textCapSentences" android:fontFamily="@font/open_sans"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/post_office_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:focusable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/Select_Post_Office" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:drawableTint="@color/lightdark"/>
                        <EditText android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_landline_no_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginTop="18dp" android:layout_marginRight="30dp" android:hint="@string/phone_No" android:maxLength="10" android:inputType="number" android:fontFamily="@font/open_sans"/>
                        <LinearLayout android:orientation="vertical" android:id="@+id/captch_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:weightSum="2">
                                <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                                    <TextView android:textSize="11sp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_loading_captcha" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Loading_Captcha" android:singleLine="true"/>
                                    <ImageView android:id="@+id/captcha" android:background="@color/yellow" android:visibility="gone" android:layout_width="@dimen/size110" android:layout_height="29dp"/>
                                </LinearLayout>
                                <ImageView android:layout_gravity="center" android:id="@+id/loginCaptchaRefresh" android:background="@drawable/ic_autorenew_black_24dp" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="@dimen/dp_2"/>
                                <EditText android:textSize="12dp" android:gravity="center" android:id="@+id/tv_captcha_input" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/enter_Captcha" android:singleLine="true" android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_next_2" android:background="@drawable/round_red_fill" android:paddingLeft="@dimen/size25" android:paddingRight="@dimen/size25" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginTop="@dimen/dimen_10" android:layout_marginBottom="@dimen/dimen_10" android:text="@string/next" android:fontFamily="@font/open_sans_bold"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
            <TextView android:textSize="10dp" android:textColor="@color/white" android:layout_gravity="right" android:id="@+id/tv_user_guide" android:paddingBottom="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginRight="35dp" android:layout_marginBottom="55dp" android:text="@string/user_guide" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
    </ScrollView>
    <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center" android:id="@+id/registration_bottom_ads" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" ads:adSize="BANNER" ads:adUnitId="@string/registration_bottom_ads"/>
</RelativeLayout>
