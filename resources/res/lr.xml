<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
        <EditText android:textSize="18dp" android:textColor="@color/dark" android:textColorHint="@color/lightgreytxt" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_loyalty_number" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:hint="@string/loyalty_Account_Number" android:singleLine="true" android:maxLength="15" android:inputType="number"/>
        <View android:background="@color/grey" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="0.9dp" android:layout_marginLeft="20dp" android:layout_marginTop="1dp" android:layout_marginRight="20dp" android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/loyalty_bank_ll" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp">
        <TextView android:textSize="18dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Bank_Name" android:fontFamily="@font/open_sans_semibold"/>
        <View android:layout_gravity="center_vertical" android:background="@color/lightgreytxt" android:layout_width="0.5dp" android:layout_height="15dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
        <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/loayalty_bank_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="@color/lightgreytxt" android:id="@+id/loyalty_bank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_bank_name" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout android:id="@+id/otp_ll" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:paddingTop="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="15dp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/addloyalty_header" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="12dp" android:text="@string/addloyalty_info_message" android:drawableLeft="@drawable/check" android:drawablePadding="3dp" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:layout_marginRight="15dp">
                <EditText android:textSize="14dp" android:textColor="@color/black_90_opa" android:textColorHint="@color/black_90_opa" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/et_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="@string/otp" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="1" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <TextView android:textSize="11dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/tv_resend_otp" android:background="@color/white" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/resend_OTP" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/blue"/>
            <RelativeLayout android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="12dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/verify_otp" android:background="@drawable/round_red_fill" android:paddingLeft="17dp" android:paddingTop="7dp" android:paddingRight="17dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Verify" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
