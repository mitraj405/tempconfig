<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/lighter_grey" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom">
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/purchase_loyalty_point_heading" android:layout_weight="2.5" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <View android:background="@color/lighter_grey" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"/>
                <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="2">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/purchase_loyalty_point_heading2" android:layout_weight="2" android:drawableTint="@color/lightdark"/>
                    <LinearLayout android:paddingLeft="10dp" android:paddingTop="5dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="35dp" android:layout_weight="0.2">
                        <ImageView android:id="@+id/iv_min" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/ic_minus"/>
                        <EditText android:textSize="15dp" android:textColor="@color/black_90_opa" android:id="@+id/et_reward_point" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-7dp" android:text="0" android:maxLength="9" android:inputType="number" android:fontFamily="@font/open_sans_bold"/>
                        <ImageView android:id="@+id/iv_plus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:src="@drawable/ic_add"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="10dp"/>
                <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/purchase_loyalty_point_heading3" android:layout_weight="1.5" android:drawableTint="@color/lightdark"/>
                    <TextView android:textSize="13dp" android:textColor="@color/dark" android:gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/purchase_loyalty_point_heading3_value" android:layout_weight="0.9" android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>
                <View android:background="@color/white" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="10dp"/>
                <LinearLayout android:orientation="horizontal" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/purchase_loyalty_point_heading4" android:layout_weight="1" android:drawableTint="@color/lightdark"/>
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/tv_total_value" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="50dp" android:text="0.0" android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>
                <View android:background="@color/lighter_grey" android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="17dp" android:layout_marginBottom="5dp"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/gstin_detail_ll" android:background="@color/white" android:padding="10dp" android:paddingTop="10dp" android:paddingBottom="@dimen/dimen_10" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:id="@+id/gst_rl" android:paddingLeft="0dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/gstdetail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/gstn_detail_for_tax_benefit" android:fontFamily="@font/open_sans"/>
                        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <ImageView android:id="@+id/gst_detail_arrow" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/gst_detail_ll" android:background="@color/white" android:paddingLeft="1dp" android:paddingRight="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/gstin_number" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/gSTIN_Number" android:singleLine="true" android:maxLength="15" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789" android:inputType="textCapCharacters"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/gstin_number"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/gst_passenger_name" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/name_as_per_Aadhaar" android:singleLine="true"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/gst_passenger_name"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/flat_door_block" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/Flat_Block_Number" android:singleLine="true"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/flat_door_block"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/street_lane" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/Street_Lane_Number" android:singleLine="true"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/street_lane"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/area_locality" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/Area_Locality" android:singleLine="true"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/area_locality"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_pincode" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/Pin_Number" android:singleLine="true" android:inputType="number"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/et_pincode"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/city_reg" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/city" android:singleLine="true" android:editable="false" android:drawableRight="@drawable/spinner_downwards" android:drawableTint="@color/dark"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/city_reg"/>
                    <EditText android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_state_reg" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:focusable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:hint="@string/state" android:singleLine="true" android:editable="false" android:drawableTint="@color/dark"/>
                    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_below="@+id/et_state_reg"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout android:id="@+id/bottom" android:background="@color/bottom_dark" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_fare_per_person" android:layout_width="match_parent" android:layout_height="@dimen/dimen_30" android:layout_weight="1"/>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"> 8 
                <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/purchase_loyalty_points" android:background="@drawable/round_red_fill" android:paddingTop="7dp" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/Purchase_Loyalty_Points" android:fontFamily="@font/open_sans_bold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
