<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:id="@+id/header" android:layout_width="match_parent" android:layout_height="wrap_content" android:elevation="5dp">
            <cris.org.in.ima.utils.StatusBarView android:background="@drawable/btn_gradient" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
        <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/footer" android:layout_below="@+id/header">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gatimaan exp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                            <TextView android:textSize="14dp" android:textColor="@color/colorAccent" android:id="@+id/train_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="(12050)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <TextView android:textSize="13dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="@string/pnr" android:layout_toLeftOf="@+id/pnr" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
                        <TextView android:textSize="13dp" android:textColor="@color/red" android:id="@+id/pnr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="10001675905" android:layout_alignParentRight="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
                    </RelativeLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                        <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/dept_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tue, 15 Jan " android:layout_weight="1" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                        <TextView android:textSize="11dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/arv_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tue, 15 Jan " android:layout_weight="1" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                        <TextView android:textSize="14dp" android:textColor="@color/dark" android:id="@+id/dept_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="08:10" android:layout_weight="1" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
                            <View android:layout_gravity="center" android:background="@color/lightdark" android:layout_width="20dp" android:layout_height="1dp" android:layout_marginRight="4dp"/>
                            <TextView android:textSize="11dp" android:textColor="@color/lightdark" android:id="@+id/travel_time" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="03h 03m" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
                            <View android:background="@color/lightdark" android:layout_width="20dp" android:layout_height="1dp" android:layout_marginLeft="4dp"/>
                        </LinearLayout>
                        <TextView android:textSize="14dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/arv_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="08:10" android:layout_weight="1" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/from_station" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="H Nizamuddin (NZM)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <LinearLayout android:gravity="right" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/to_station" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Gwalior (GWL)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView android:textSize="11dp" android:textColor="@color/bottom_dark" android:layout_gravity="center" android:id="@+id/cls_qt_stn" android:background="#efeff4" android:paddingLeft="10dp" android:paddingTop="6dp" android:paddingRight="10dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="" android:fontFamily="@font/open_sans_semibold"/>
                </LinearLayout>
                <View android:background="#efeff4" android:layout_width="match_parent" android:layout_height="10dp"/>
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/psgnList" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent"/>
                <View android:background="#efeff4" android:layout_width="match_parent" android:layout_height="10dp"/>
                <RelativeLayout android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/transaction_Id" android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tdr_txnid" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/tdr_Status" android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tdr_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="asdfh" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/tdr_Zone" android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tdr_zone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/tdr_Reason" android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tdr_reason" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/tdr_Filed_Date" android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tdr_filed_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal" android:id="@+id/tdr_repo_date_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/tdr_Repudiate_Date" android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tdr_rep_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:fontFamily="@font/open_sans"/>
                        </LinearLayout>
                        <TextView android:textSize="10dp" android:textColor="@color/blue" android:id="@+id/refund_status_with_zonalrailway" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/link_to_chrck_refund" android:fontFamily="@font/open_sans"/>
                    </LinearLayout>
                </RelativeLayout>
                <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center" android:id="@+id/tdr_details_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" ads:adSizes="MEDIUM_RECTANGLE,LARGE_BANNER,BANNER" ads:adUnitId="@string/AD_ID_SBANNER_bottom"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout android:id="@+id/confirm_ll" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:padding="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/dark" android:layout_gravity="center" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/confirm" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="12dp" android:text="@string/do_you_want_TDR" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
            <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp">
                <TextView android:textSize="13dp" android:textColor="@color/dark" android:id="@+id/no" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/no" android:fontFamily="@font/open_sans_semibold"/>
                <TextView android:textSize="13dp" android:textColor="@color/dark" android:id="@+id/yes_confirm" android:background="@color/white" android:paddingLeft="10dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/yes" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/tdr_reason_ll" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:gravity="center" android:id="@+id/file_ll" android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="12dp" android:textColor="@color/white" android:id="@+id/file_tdr" android:background="@drawable/round_red_fill" android:paddingLeft="17dp" android:paddingTop="8dp" android:paddingRight="17dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/file_TDR" android:fontFamily="@font/open_sans_semibold"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/reason" android:background="@drawable/below_popup_white_bg" android:padding="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/file_ll">
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/dark" android:layout_gravity="center" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/TDR_Reason" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="11dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:paddingRight="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="12dp" android:layout_marginRight="10dp" android:layout_marginBottom="15dp" android:hint="@string/Select_TDR_Reason" android:drawableRight="@drawable/spinner_downwards" android:inputType="textCapSentences" android:fontFamily="@font/open_sans" android:drawableTint="@color/blue"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/filled_ll" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:padding="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/dark" android:layout_gravity="center" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/TDR_Filed" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="12dp" android:text="@string/TDR_filed_successfully" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
            <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginBottom="15dp" android:text="TDR Number: 10005416665" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
