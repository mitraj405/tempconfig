<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/availability_ll" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/mealtype_rl" android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginRight="14dp">
        <TextView android:textSize="14dp" android:textStyle="bold" android:id="@+id/tv_mealtype" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dinner" android:fontFamily="@font/open_sans_bold"/>
        <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/im_show_mealdetail" android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue"/>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <LinearLayout android:id="@+id/expend_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_mealitems" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
