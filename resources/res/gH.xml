<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/header" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/topBar" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize" ads:srcCompat="@drawable/btn_gradient"/>
    <TextView android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/textView3" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:text="@string/feedback_survey" android:layout_centerHorizontal="true" android:fontFamily="@font/open_sans_bold" android:textAlignment="center"/>
    <TextView android:textSize="16sp" android:textColor="#090909" android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="100dp" android:text="@string/rate" android:layout_weight="1" android:fontFamily="@font/open_sans" android:textAlignment="center"/>
    <TextView android:textSize="14dp" android:textColor="@color/dark" android:id="@+id/criteria_Rating" android:background="@drawable/edittextborder" android:paddingTop="8dp" android:paddingBottom="4dp" android:layout_width="285dp" android:layout_height="35dp" android:layout_marginLeft="60dp" android:layout_marginTop="210dp" android:hint="@string/criteria" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans" android:textAlignment="center" android:drawableTint="@color/lightdark"/>
    <EditText android:gravity="center" android:id="@+id/textView_remarks" android:background="@drawable/edit_text_border" android:layout_width="325dp" android:layout_height="207dp" android:layout_marginTop="300dp" android:hint="Remarks(Optional)" android:maxLength="200" android:layout_centerInParent="true"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="228dp" android:layout_height="42dp" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/star_1" android:tag="0" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" ads:srcCompat="@drawable/star_outline"/>
        <ImageView android:id="@+id/star_2" android:tag="1" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" ads:srcCompat="@drawable/star_outline"/>
        <ImageView android:id="@+id/star_3" android:tag="2" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" ads:srcCompat="@drawable/star_outline"/>
        <ImageView android:id="@+id/star_4" android:tag="3" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" ads:srcCompat="@drawable/star_outline"/>
        <ImageView android:id="@+id/star_5" android:tag="4" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:onClick="starTap" ads:srcCompat="@drawable/star_outline"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/bottom" android:background="@color/bottom_dark" android:padding="1dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/bottom_skip" android:paddingTop="10dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_skip" android:paddingTop="9dp" android:paddingBottom="9dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/skip" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_submit" android:background="@color/red" android:paddingTop="9dp" android:paddingBottom="9dp" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/submit" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:id="@+id/back" android:padding="15dp" android:visibility="visible" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/left" android:layout_alignBottom="@+id/topBar" android:layout_alignParentTop="true" android:contentDescription="back "/>
</RelativeLayout>
