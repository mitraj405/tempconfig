<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/fare_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/heading" android:background="#efefe5" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/fare_breakup_For_LAP1" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/ticket_fare" android:drawablePadding="3dp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/fastest_charge" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="₹ 1935" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/travel_insurance_rl" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Travel_Insurance_Premium" android:drawablePadding="3dp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/insurance_charge" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="₹ 0" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Convenience_Fee" android:drawablePadding="3dp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tv_ConvenienceFee" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="₹ 0" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            </RelativeLayout>
            <RelativeLayout android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/IRCTC_Service_Charge" android:drawableLeft="@drawable/check" android:drawablePadding="3dp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/service_charges" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="₹ 0" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Total_Amount" android:drawablePadding="3dp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/total_amount" android:background="@color/white" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="₹ 1935" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/grand_total_rl" android:background="#efefe5" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Grand_Total" android:drawablePadding="3dp" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
                <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/tv_grand_total" android:padding="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="₹ 0" android:drawableLeft="@drawable/check" android:drawablePadding="3dp" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
