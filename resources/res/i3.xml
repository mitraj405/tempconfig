<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.85">
        <TextView android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" style="@style/TextAppearance.Compat.Notification.Title"/>
        <TextView android:ellipsize="end" android:id="@+id/tv_message" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" style="@style/TextAppearance.Compat.Notification"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:id="@+id/linear_layout_large_icon" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.15">
        <ImageView android:id="@+id/iv_large_icon" android:paddingBottom="2dp" android:layout_width="36dp" android:layout_height="36dp" android:layout_marginLeft="5dp" android:scaleType="fitXY"/>
    </LinearLayout>
</LinearLayout>
