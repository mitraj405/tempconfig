<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:textSize="9dp" android:id="@+id/iv_select_train" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:checked="true" android:button="@drawable/irctc_checkbox" android:scaleX="1.5" android:scaleY="1.5"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/rl_train_detail_parent_layout" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="13dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/tv_train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gatimaan exp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                <TextView android:textSize="11dp" android:textColor="@color/colorAccent" android:id="@+id/tv_train_no" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="(12050)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="9dp" android:textColor="@color/dark" android:id="@+id/tv_from_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DELHI" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
                <ImageView android:layout_width="25dp" android:layout_height="10dp" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:src="@drawable/arrow"/>
                <TextView android:textSize="9dp" android:textColor="@color/dark" android:id="@+id/tv_to_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="GWALIOR" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
                <TextView android:textSize="9dp" android:textColor="@color/colorAccent" android:id="@+id/dep_and_arrival_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="08:10 - 11:13" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <TextView android:textSize="9dp" android:textColor="@color/colorAccent" android:id="@+id/travel_time_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tue, 05 feb | 3h 3min" android:fontFamily="@font/open_sans"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="73dp"/>
</RelativeLayout>
