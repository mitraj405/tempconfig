<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/stnListRelLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1dp" android:weightSum="10">
        <LinearLayout android:orientation="horizontal" android:padding="8dp" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_station_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Delhi(NDLS)" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/dummy_view" android:layout_width="18dp" android:layout_height="25dp" android:layout_marginLeft="7dp" android:layout_marginRight="5dp" android:text="-&gt;"/>
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_station_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Howrah (HWH)" android:fontFamily="@font/open_sans_semibold"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.3dp"/>
</LinearLayout>
