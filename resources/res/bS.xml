<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/stnListRelLayout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1dp">
        <LinearLayout android:orientation="horizontal" android:paddingTop="10dp" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="8dp">
            <TextView android:textSize="15dp" android:textColor="@color/dark" android:id="@+id/tv_station_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/dummy_view" android:paddingLeft="1dp" android:paddingRight="1dp" android:layout_width="7dp" android:layout_height="14dp" android:text="-"/>
            <TextView android:textSize="15dp" android:textColor="@color/dark" android:id="@+id/tv_station_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/open_sans_semibold"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:paddingTop="2dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="8dp">
            <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_station_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
            <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_station_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.3dp"/>
</LinearLayout>
