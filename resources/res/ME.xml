<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/PrimaryColor" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/psgn_row" android:background="@color/white" android:paddingLeft="12dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="1dp">
        <TextView android:id="@+id/iv_profile_icon" android:paddingLeft="12dp" android:paddingTop="16dp" android:paddingRight="12dp" android:paddingBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="58"/>
        <TextView android:textSize="13dp" android:textColor="@color/light_blue" android:id="@+id/tv_name" android:paddingTop="10dp" android:paddingRight="15dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rajeev Kumar" android:singleLine="true" android:layout_toRightOf="@+id/iv_profile_icon" fontFamily="fonts/Roboto-Regular.ttf"/>
        <ImageView android:id="@+id/iv_verify_icon" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginTop="13dp" android:layout_toRightOf="@+id/tv_name"/>
        <TextView android:textSize="13dp" android:textColor="@android:color/black" android:id="@+id/tv_age_gender" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="32M" android:layout_toRightOf="@+id/iv_profile_icon" android:layout_below="@+id/tv_name" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textSize="13dp" android:textColor="@android:color/black" android:id="@+id/tv_berth_pref" android:paddingRight="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LB" android:layout_toRightOf="@+id/tv_age_gender" android:layout_below="@+id/tv_name" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textSize="13dp" android:textColor="@color/black_90_opa" android:id="@+id/concession_opted" android:paddingRight="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="| SS" android:layout_toRightOf="@+id/tv_berth_pref" android:layout_below="@+id/tv_name" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textSize="13dp" android:textColor="@color/black_90_opa" android:id="@+id/child_berth_opt" android:paddingRight="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="| Berth Opt" android:layout_toRightOf="@+id/concession_opted" android:layout_below="@+id/tv_name" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textSize="13dp" android:textColor="@color/black_90_opa" android:id="@+id/psgn_food" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="| Veg " android:drawablePadding="10dp" android:layout_toRightOf="@+id/child_berth_opt" android:layout_below="@+id/tv_name" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textSize="13dp" android:textColor="@color/black_90_opa" android:id="@+id/tv_soft_userid" android:paddingRight="3dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" |" android:layout_toRightOf="@+id/psgn_food" android:layout_below="@+id/tv_name" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textColor="@color/blue" android:id="@+id/iv_delete" android:paddingTop="16dp" android:paddingRight="25dp" android:paddingBottom="16dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/delete" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:layout_below="@+id/psgn_row">
        <View android:background="@color/darkGrey" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    </LinearLayout>
</LinearLayout>
