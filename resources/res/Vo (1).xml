<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/TransparentBACKGROUND_COLOR20" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="@drawable/below_popup_white_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:padding="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="17dp" android:textColor="@color/dark" android:gravity="center" android:id="@+id/tv_irctc_ewallet_heading" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/ewallet" android:drawablePadding="3dp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold" android:drawableTint="@color/white"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/redeem_loyalty_layout" android:background="@color/white" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                <LinearLayout android:orientation="horizontal" android:id="@+id/insufficient_balance_ll" android:paddingTop="20dp" android:paddingBottom="5dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <TextView android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/insufficient_balance" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/user_name_ll" android:paddingTop="20dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <TextView android:textStyle="bold" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="User Name:" android:fontFamily="@font/open_sans"/>
                    <TextView android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/tv_user_name" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="ravisam" android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <TextView android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Loyalty point balance:" android:fontFamily="@font/open_sans"/>
                    <TextView android:id="@+id/tv_total_point_balance" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/amount_to_deducted_ll" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <TextView android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Amount to be Deducted:" android:fontFamily="@font/open_sans"/>
                    <TextView android:id="@+id/tv_amount_to_deducted" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/remaining_balance_ll" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
                    <TextView android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Remaining balance:" android:fontFamily="@font/open_sans"/>
                    <TextView android:id="@+id/tv_remaining_balance" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
            </LinearLayout>
            <TextView android:textSize="12dp" android:textColor="@color/red" android:gravity="center" android:id="@+id/ewallet_avl_balance" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Available balance in wallet: Rs 5,435" android:drawablePadding="3dp" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
            <TextView android:textSize="15dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/ewallet_user_id" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:hint="User ID" android:singleLine="true" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
            <com.google.android.material.textfield.TextInputLayout android:layout_gravity="center_horizontal" android:id="@+id/ewallet_txn_password_ll" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/dimen_50" android:layout_marginTop="20dp">
                <com.google.android.material.textfield.TextInputEditText android:textSize="15dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:id="@+id/ewallet_txn_password" android:background="@drawable/edittextborder" android:padding="3dp" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="@string/enter_txn_pw" android:maxLength="20" android:drawableRight="@drawable/show" android:inputType="textPassword" android:drawableTint="@color/white_line_color"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                <EditText android:enabled="false" android:textSize="15dp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/irctc_ewallet_otp" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="OTP" android:singleLine="true" android:maxLength="10" android:digits="0123456789" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <TextView android:textSize="14dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/irctc_wallet_send_otp" android:background="@color/white" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/send_otp" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="8dp" android:textColor="@color/dark" android:id="@+id/tv_service_msg" android:background="@color/white" android:padding="3dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="An OTP (valid for next 15 mins) has been sent to your mobile number" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/white"/>
            <View android:layout_gravity="center_vertical" android:background="@color/lightgreytxt" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="0.8dp" android:layout_marginLeft="2dp" android:layout_marginTop="15dp" android:layout_marginRight="2dp"/>
            <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/tv_ewallet_txn_charge" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/transaction_chrgs" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
            <TextView android:textSize="11dp" android:textStyle="bold" android:id="@+id/tv_ewallet_otp_note" android:background="@color/white" android:padding="3dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/ewallet_otp_note" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
