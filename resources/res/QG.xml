        <ImageView android:id="@+id/notification" android:padding="17dp" android:visibility="gone" android:layout_width="70dp" android:layout_height="match_parent" android:src="@drawable/notification" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true">
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_title_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/tv_title_name_trainlist" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
