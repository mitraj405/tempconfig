    <RelativeLayout android:orientation="horizontal" android:id="@+id/ll_toolbar_title" android:background="@drawable/btn_gradient" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
        <ImageView android:id="@+id/iv_hamburger" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="40dp" android:layout_height="match_parent" android:src="@drawable/hamburger" android:layout_centerVertical="true"/>
