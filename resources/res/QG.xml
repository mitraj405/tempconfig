        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_centerInParent="true">
            <TextView android:textSize="15dp" android:textColor="@color/dark_red" android:id="@+id/attention_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:text="Testing app" android:rotation="-20" android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
        <ImageView android:id="@+id/languageChange" android:visibility="gone" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/language2" android:tint="@color/white" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="40dp"/>
        <ImageView android:id="@+id/menu" android:visibility="gone" android:layout_width="16dp" android:layout_height="20dp" android:src="@drawable/footer_more" android:tint="@color/white" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="10dp"/>
        <ImageView android:id="@+id/fevJourney" android:visibility="gone" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/ic_fevouritehome" android:tint="@color/white" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="10dp"/>
        <ImageView android:id="@+id/filterIcon" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/filter" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginEnd="15dp" ads:tint="@color/white"/>
        <TextView android:textSize="13dp" android:textColor="@color/white" android:id="@+id/tv_action_right" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/send_otp" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold" android:paddingStart="10dp"/>
        <TextView android:textSize="13dp" android:textColor="@color/white" android:id="@+id/tv_action_right1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Edit" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold" android:paddingStart="10dp"/>
        <TextView android:textSize="13dp" android:textColor="@color/white" android:id="@+id/tv_action_right_cancel" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/cancel" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold" android:paddingStart="10dp"/>
    </RelativeLayout>
