<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="8dp" android:textColor="@color/dark" android:gravity="left" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:layout_marginRight="20dp" android:text="@string/train_detail_alternate_trains" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
            <EditText android:textSize="11dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_pnr" android:background="@color/white" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:hint="@string/PNR" android:singleLine="true" android:inputType="numberPassword"/>
            <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:layout_marginRight="20dp"/>
            <EditText android:textSize="11dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="left" android:layout_gravity="center_horizontal" android:id="@+id/et_train_number" android:background="@color/white" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:hint="@string/train_number_for_vikalp" android:singleLine="true" android:inputType="numberPassword"/>
            <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="20dp" android:layout_marginTop="2dp" android:layout_marginRight="20dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="30dp" android:layout_marginRight="20dp" android:layout_marginBottom="30dp">
                <TextView android:textSize="16dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/loading_captcha" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginRight="10dp" android:hint="@string/Loading_Captcha" android:singleLine="true" android:layout_weight="1" android:fontFamily="@font/open_sans_semibold"/>
                <ImageView android:textSize="16dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/captcha" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginRight="10dp" android:hint="45GHLD" android:singleLine="true" android:layout_weight="1" android:fontFamily="@font/open_sans_semibold"/>
                <ImageView android:id="@+id/captchaRefresh" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_marginBottom="-5dp" android:src="@drawable/refresh"/>
                <EditText android:textSize="12dp" android:textColor="@color/black_90_opa" android:textColorHint="@color/black_90_opa" android:gravity="center" android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/captcha_input" android:background="@drawable/edittextborder" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="30dp" android:layout_marginLeft="10dp" android:layout_marginRight="15dp" android:hint="@string/enter_Captcha" android:singleLine="true" android:layout_weight="1" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <TextView android:textSize="10dp" android:textColor="@color/dark" android:textColorHint="@color/lightgreytxt" android:layout_gravity="center_horizontal" android:paddingLeft="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/caotcha_leter_msg" android:layout_weight="1"/>
            <TextView android:textSize="8dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/txt_terms_conditions" android:paddingLeft="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="@string/TndC_system_tkt_vikalp" android:singleLine="true" android:layout_weight="1" android:fontFamily="@font/open_sans_semibold"/>
        </LinearLayout>
        <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center_horizontal" android:id="@+id/opt_vikalp_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" ads:adSizes="MEDIUM_RECTANGLE,LARGE_BANNER,BANNER" ads:adUnitId="@string/opt_vikalp_bot"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/otp_ll" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:paddingTop="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <TextView android:textSize="15dp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="@string/opt_vikalp" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            <TextView android:textSize="11dp" android:textColor="@color/dark" android:id="@+id/fastest" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="12dp" android:text="@string/enter_otp_vikalp" android:drawableLeft="@drawable/check" android:drawablePadding="3dp" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:layout_marginRight="15dp">
                <EditText android:textSize="14dp" android:textColor="@color/black_90_opa" android:textColorHint="@color/black_90_opa" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/vikalp_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="@string/otp" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="1" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center" android:id="@+id/opt_vikalp_otp" android:layout_width="wrap_content" android:layout_height="wrap_content" ads:adSize="BANNER" ads:adUnitId="@string/opt_vikalp_otp_bottom"/>
            <TextView android:textSize="9dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/tv_resend_otp" android:background="@color/white" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/resend_OTP" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/blue"/>
            <RelativeLayout android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="9dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/verify_otp" android:background="@drawable/round_red_fill" android:paddingLeft="17dp" android:paddingTop="7dp" android:paddingRight="17dp" android:paddingBottom="7dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Verify_OTP" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
