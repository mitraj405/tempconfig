<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:background="@color/gray_theme" android:paddingTop="@dimen/dimen_10" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <CheckBox android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:button="@drawable/check_orange"/>
        <ImageView android:id="@+id/icon" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="5dp" android:layout_marginRight="10dp" android:src="@drawable/ic_user_blue"/>
        <TextView android:textSize="17dp" android:textColor="@color/white_90_opa" android:gravity="center_vertical" android:paddingBottom="2dp" android:layout_width="145dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Rajeev Kumar" android:singleLine="true" android:layout_toLeftOf="@+id/iv_delete" android:layout_toRightOf="@+id/icon" fontFamily="fonts/Roboto-Regular.ttf"/>
        <TextView android:textSize="17dp" android:textColor="@color/white_90_opa" android:paddingRight="10dp" android:layout_width="30dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="14" fontFamily="fonts/Roboto-Regular.ttf"/>
        <View android:id="@+id/dummy_view" android:background="@color/white_50_opa" android:layout_width="1dp" android:layout_height="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp"/>
        <TextView android:textSize="17dp" android:textColor="@color/white_90_opa" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Female" android:layout_toRightOf="@+id/dummy_view" fontFamily="fonts/Roboto-Regular.ttf"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/master_passenger_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <CheckBox android:id="@+id/iv_profile_icon" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:button="@drawable/irctc_checkbox" android:scaleX="1.5" android:scaleY="1.5"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp">
                <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="13dp" android:textColor="@color/dark" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="" android:lineSpacingMultiplier="0.7" android:contentDescription="" android:fontFamily="@font/open_sans_semibold"/>
                    <ImageView android:id="@+id/verifyIcon" android:padding="3dp" android:layout_width="17dp" android:layout_height="17dp" android:layout_marginLeft="5dp" android:layout_marginTop="1dp" android:src="@drawable/verified"/>
                </LinearLayout>
                <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_age_gender" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="" android:lineSpacingMultiplier="0.7" android:contentDescription="" android:fontFamily="@font/open_sans"/>
                <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_berth_pref_food" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="" android:lineSpacingMultiplier="0.7" android:contentDescription="" android:fontFamily="@font/open_sans"/>
                <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_user_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="7dp" android:text="" android:lineSpacingMultiplier="0.7" android:contentDescription="" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View android:background="#acacac" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="5dp" android:layout_below="@+id/dummy_view"/>
</LinearLayout>
