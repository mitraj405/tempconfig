            <TextView android:textSize="7dp" android:textStyle="bold" android:textColor="@color/blue" android:gravity="center" android:id="@+id/w_payu_offer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-1.5dp" android:text="Offer\10Details" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
