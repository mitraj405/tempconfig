<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/trans_view" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/scroll"/>
    <ScrollView android:id="@+id/scroll" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:paddingTop="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="15dp" android:textColor="@color/dark" android:gravity="center" android:id="@+id/tv_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="journey detail" android:layout_centerHorizontal="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
            </RelativeLayout>
            <EditText android:textSize="14dp" android:textColor="@color/dark" android:textColorHint="@android:color/background_dark" android:id="@+id/et_train_number" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="16dp" android:layout_marginRight="25dp" android:hint="Train Number " android:singleLine="true" android:maxLength="35" android:fontFamily="@font/open_sans_semibold"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginTop="13dp">
                <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="From STN" android:fontFamily="@font/open_sans_bold"/>
                <View android:layout_gravity="center_vertical" android:background="@color/blue" android:layout_width="1dp" android:layout_height="15dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
                <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/rv_fromstn" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:id="@+id/tv_fromstan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:fontFamily="@font/open_sans_semibold"/>
                    <ImageView android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="@color/lightgreytxt" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginTop="13dp">
                <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="To STN" android:fontFamily="@font/open_sans_bold"/>
                <View android:layout_gravity="center_vertical" android:background="@color/blue" android:layout_width="1dp" android:layout_height="15dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
                <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/rv_tostn" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:id="@+id/tv_tostan" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:fontFamily="@font/open_sans_semibold"/>
                    <ImageView android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="@color/lightgreytxt" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginTop="13dp">
                <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Class" android:fontFamily="@font/open_sans_bold"/>
                <View android:layout_gravity="center_vertical" android:background="@color/blue" android:layout_width="1dp" android:layout_height="15dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
                <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/rv_class" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:id="@+id/tv_class" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:hint="Select Class" android:fontFamily="@font/open_sans_semibold"/>
                    <ImageView android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/lightgreytxt" android:id="@+id/tv_berth_preference" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="@color/lightgreytxt" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="28dp" android:layout_marginTop="13dp">
                <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Quota" android:fontFamily="@font/open_sans_bold"/>
                <View android:layout_gravity="center_vertical" android:background="@color/blue" android:layout_width="1dp" android:layout_height="15dp" android:layout_marginLeft="4dp" android:layout_marginRight="4dp"/>
                <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/rv_quaota" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:layout_gravity="center_vertical" android:id="@+id/tv_quota" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:hint="Select Quota" android:fontFamily="@font/open_sans_semibold"/>
                    <ImageView android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="10dp" android:layout_marginTop="7dp" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/lightgreytxt" android:id="@+id/tv_food_pref" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold"/>
                </RelativeLayout>
            </LinearLayout>
            <View android:background="@color/lightgreytxt" android:layout_width="match_parent" android:layout_height="0.5dp"/>
            <RelativeLayout android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="12dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/submit" android:background="@drawable/round_red_fill" android:paddingLeft="25dp" android:paddingTop="8dp" android:paddingRight="25dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="Add" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
