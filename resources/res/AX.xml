<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:left="-2dp" android:top="-6dp" android:right="-2dp" android:bottom="2dp">
        <selector>
            <item android:state_focused="true" android:state_enabled="true">
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/light_blue"/>
                    <solid android:color="#ffffff"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/light_grey"/>
                    <solid android:color="#ffffff"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
