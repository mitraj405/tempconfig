<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/click_airtel" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <RadioButton android:id="@+id/select_airtel_money" android:layout_width="wrap_content" android:layout_height="wrap_content" android:buttonTint="@color/red"/>
        <ImageView android:id="@+id/airtel_money" android:layout_width="90dp" android:layout_height="25dp" android:layout_marginLeft="2dp" android:src="@drawable/ic_logo_airtel_money" android:contentDescription="Airtel Money Wallet"/>
    </LinearLayout>
    <LinearLayout android:gravity="left" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="2dp" android:weightSum="10">
        <TextView android:textSize="7dp" android:textColor="@color/dark" android:id="@+id/w_airtel_txn" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="8" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
