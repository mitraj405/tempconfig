<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/main_ll" android:paddingBottom="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/card_type_rl" android:background="@color/white" android:layout_width="match_parent" android:layout_height="@dimen/size40">
            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="10dp" android:layout_marginTop="0dp" android:layout_marginRight="@dimen/size20" android:src="@drawable/spinner_downwards" android:tint="@color/blue" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/lightgreytxt" android:id="@+id/tv_card_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="Select Authentication Type" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:fontFamily="@font/open_sans_semibold" android:textAlignment="center"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/veryFlag_ll" android:background="@color/white" android:paddingBottom="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <TextView android:textSize="15sp" android:textColor="@color/green" android:id="@+id/verifyFlag" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/open_sans_semibold"/>
            <Button android:textSize="12dp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center" android:id="@+id/reverify_aadhaar" android:background="@drawable/round_red_fill" android:paddingLeft="20dp" android:paddingTop="7dp" android:paddingRight="20dp" android:paddingBottom="7dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size20" android:layout_marginBottom="@dimen/size10" android:text="@string/reverify_aadhaar" android:fontFamily="@font/open_sans_bold"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/adharverify_ll" android:background="@color/white" android:padding="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10">
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:id="@+id/et_aadhar_name" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:hint="@string/name_as_per_Aadhaar" android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz " android:fontFamily="@font/open_sans_semibold"/>
            <com.google.android.material.textfield.TextInputLayout android:textColor="@color/dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" ads:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText android:textSize="12dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:id="@+id/et_aadhar_number" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/enter_aadhaar_Virtual_Number" android:maxLength="12" android:drawableRight="@drawable/visibility_off" android:fontFamily="@font/open_sans_semibold"/>
            </com.google.android.material.textfield.TextInputLayout>
            <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginRight="15dp"/>
            <EditText android:textSize="12dp" android:id="@+id/aadhar_dob" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:focusable="false" android:focusableInTouchMode="false" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:hint="@string/Date_of_Birth" android:maxLength="16" android:inputType="none" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="12dp" android:id="@+id/aadhar_gender" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:focusable="false" android:focusableInTouchMode="false" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:hint="@string/Gender" android:maxLength="16" android:inputType="none" android:fontFamily="@font/open_sans_semibold"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ll_select_kyc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp">
                <CheckBox android:id="@+id/select_tandc_kyc" android:background="?android:attr/listChoiceIndicatorMultiple" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="7dp" android:checked="true" android:button="@null" android:backgroundTint="@color/lightdark"/>
                <TextView android:textSize="10dp" android:textColor="@color/dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:text="@string/aadhaar_kyc_tandc" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/pan_card_ll" android:background="@color/white" android:padding="15dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10">
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:id="@+id/et_pan_card_number" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:hint="@string/enter_pan_card_num" android:maxLength="10" android:inputType="textCapCharacters" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:id="@+id/et_pan_card_name" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:hint="@string/pan_card_first_name" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="12dp" android:id="@+id/et_pan_dob" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:focusable="false" android:focusableInTouchMode="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:hint="@string/Date_of_Birth" android:maxLength="16" android:inputType="none" android:fontFamily="@font/open_sans_semibold"/>
        </LinearLayout>
        <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center" android:id="@+id/adhar_kyc_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" ads:adSizes="MEDIUM_RECTANGLE,LARGE_BANNER,BANNER" ads:adUnitId="@string/adhar_kyc_bottom"/>
    </LinearLayout>
    <RelativeLayout android:id="@+id/tv_opt_layout" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:id="@+id/otp_layout_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_alignParentTop="true"/>
        <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:paddingTop="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="15dp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/updation_title_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/fastest" android:background="@color/white" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="12dp" android:text="@string/enter_otp_send_mobile_num" android:drawableLeft="@drawable/check" android:drawablePadding="3dp" android:fontFamily="@font/open_sans" android:drawableTint="@color/white"/>
                    <EditText android:textSize="14sp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/et_otp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="7dp" android:layout_marginRight="15dp" android:hint="@string/otp" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="1" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
                    <com.google.android.gms.ads.admanager.AdManagerAdView android:layout_gravity="center" android:id="@+id/aadhar_kyc_otp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10" ads:adSizes="MEDIUM_RECTANGLE,LARGE_BANNER,BANNER" ads:adUnitId="@string/aadhar_kyc_otp_bottom"/>
                    <TextView android:textSize="13dp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/resendOtp" android:background="@color/white" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/resend_OTP" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/blue"/>
                    <RelativeLayout android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                        <TextView android:textSize="12dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/submit_otp" android:background="@drawable/round_red_fill" android:paddingLeft="25dp" android:paddingTop="10dp" android:paddingRight="25dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/Update" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
