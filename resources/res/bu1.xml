<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:paddingLeft="@dimen/dimen_10" android:paddingRight="@dimen/dimen_10" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/rel_card" android:background="@drawable/border_shadow" android:padding="@dimen/dimen_20" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/sp_13" android:textStyle="bold" android:id="@+id/card_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HDFC Credit Card"/>
        <ImageView android:id="@+id/img_card_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/visa_icon" android:layout_alignParentRight="true"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/text_card_no_grey" android:id="@+id/txt_card_no" android:padding="@dimen/dimen_3" android:longClickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_10" android:text="3248" android:drawableLeft="@drawable/incripted" android:drawablePadding="@dimen/dimen_5" android:layout_below="@+id/card_name"/>
        <EditText android:textSize="@dimen/sp_12" android:gravity="center" android:id="@+id/edit_cvv" android:background="@drawable/custom_edit_text" android:paddingTop="@dimen/dp_7" android:paddingBottom="@dimen/dp_7" android:visibility="visible" android:longClickable="false" android:layout_width="@dimen/dp_70" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20" android:minHeight="@dimen/dp_40" android:hint="@string/enter_code" android:lines="1" android:singleLine="true" android:maxLength="4" android:digits="0123456789" android:layout_below="@+id/txt_card_no" android:inputType="number"/>
        <TextView android:textSize="@dimen/sp_12" android:textColor="@color/error_color" android:id="@+id/error_cvv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_5" android:text="@string/error_cvv" android:layout_below="@+id/edit_cvv"/>
        <RelativeLayout android:gravity="center" android:id="@+id/rel_cvv" android:background="@drawable/custom_edit_text" android:paddingLeft="@dimen/dimen_15" android:paddingTop="@dimen/dimen_5" android:paddingRight="@dimen/dimen_15" android:paddingBottom="@dimen/dimen_5" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="@dimen/dp_40" android:layout_marginTop="@dimen/dimen_20" android:layout_below="@+id/txt_card_no">
            <TextView android:textSize="@dimen/sp_18" android:textColor="@android:color/black" android:id="@+id/txt_cvv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123"/>
        </RelativeLayout>
        <RelativeLayout android:gravity="center" android:id="@+id/rel_proceed_pay" android:background="@drawable/proceed_button_selector" android:paddingLeft="@dimen/dimen_15" android:paddingTop="@dimen/dimen_5" android:paddingRight="@dimen/dimen_15" android:paddingBottom="@dimen/dimen_5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_30" android:layout_marginTop="@dimen/dimen_20" android:minHeight="@dimen/dp_40" android:layout_toRightOf="@+id/edit_cvv" android:layout_below="@+id/txt_card_no">
            <TextView android:textSize="@dimen/sp_12" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/txt_proceed_to_pay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/proceed_to_pay"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
