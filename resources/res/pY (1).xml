<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
    <TextView android:id="@+id/dialogActivity_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/default_dialog_title" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" style="@style/DialogTitle"/>
    <TextView android:id="@+id/dialogActivity_dialog_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/default_dialog_message" android:layout_below="@+id/dialogActivity_dialog_title" style="@style/DialogMessage"/>
    <com.cyberfend.cyfsecurity.CircleProgressBar android:id="@+id/dialogActivity_dialog_progressBar" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginTop="30dp" android:layout_below="@+id/dialogActivity_dialog_message" android:layout_centerHorizontal="true"/>
    <Button android:id="@+id/dialogActivity_dialog_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_below="@+id/dialogActivity_dialog_progressBar" android:layout_alignParentRight="true" android:layout_centerHorizontal="true" android:textAllCaps="true" style="@style/DialogButton"/>
</RelativeLayout>
