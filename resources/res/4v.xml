<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="top" android:padding="20dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/dummy_background" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <LinearLayout android:orientation="vertical" android:background="@drawable/drw_rectangle_popup_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
        <androidx.appcompat.widget.AppCompatTextView android:textSize="16sp" android:textStyle="bold" android:id="@+id/txt_title" android:paddingTop="16dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:maxLines="1" android:lines="1"/>
        <LinearLayout android:layout_gravity="right" android:orientation="horizontal" android:paddingTop="8dp" android:paddingBottom="8dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatEditText android:textSize="14sp" android:layout_gravity="center_vertical" android:id="@+id/txt_search" android:background="@android:color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatImageView android:layout_gravity="center_vertical" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="12dp" android:layout_marginRight="16dp" android:src="@drawable/ic_search"/>
        </LinearLayout>
        <View android:background="#eaeaea" android:layout_width="match_parent" android:layout_height="1dp"/>
        <ProgressBar android:layout_gravity="center_horizontal" android:id="@+id/progress" android:visibility="gone" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginTop="12dp" android:layout_marginBottom="12dp"/>
        <androidx.recyclerview.widget.RecyclerView android:layout_gravity="left" android:id="@+id/rv_items" android:fadingEdgeLength="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp" android:requiresFadingEdge="vertical"/>
    </LinearLayout>
</FrameLayout>
