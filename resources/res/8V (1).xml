<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" android:elevation="5dp">
        <RelativeLayout android:orientation="horizontal" android:background="@drawable/btn_gradient" android:layout_width="match_parent" android:layout_height="?attr/actionBarSize">
            <ImageView android:id="@+id/iv_back_arrow" android:padding="10dp" android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/left" android:layout_centerVertical="true"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/white" android:layout_gravity="center_vertical" android:id="@+id/tv_title_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/verify_account_heading" android:layout_centerInParent="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
        </RelativeLayout>
        <ScrollView android:id="@+id/lyt_scroll" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textColor="@color/dark_black" android:gravity="center_horizontal" android:id="@+id/username" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="User id : bhipinder"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="3.5">
                    <EditText android:enabled="false" android:gravity="right" android:id="@+id/et_isd" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5"/>
                    <EditText android:gravity="left" android:id="@+id/et_mobile" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/mobile_no" android:singleLine="true" android:maxLength="10" android:layout_weight="2.5" android:inputType="number"/>
                    <TextView android:textSize="14sp" android:textColor="@color/blue" android:gravity="center" android:id="@+id/tv_mobile_edit" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit" android:layout_weight="0.5"/>
                </LinearLayout>
                <TextView android:gravity="center_horizontal" android:id="@+id/mobile_verify" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/verify_mobile_number"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="6">
                    <EditText android:gravity="center_horizontal" android:id="@+id/et_mobile_otp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="2dp" android:hint="@string/enter_otp_sent_to_your_mobileno" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="6" android:inputType="number"/>
                </LinearLayout>
                <TextView android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_resend_mob_timmer" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="" android:singleLine="true" android:windowSoftInputMode="adjustResize"/>
                <TextView android:textSize="14sp" android:textColor="@color/blue" android:gravity="center_horizontal" android:id="@+id/bt_gen_mobile_otp" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/send_otp"/>
                <TextView android:textColor="@color/dark_black" android:gravity="center_horizontal" android:id="@+id/tv_verify_mobile" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Please enter the OTP received via SMS at registered mobile number: 9852364563"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:weightSum="3">
                    <EditText android:gravity="center_horizontal" android:id="@+id/et_email" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="@string/Email" android:singleLine="true" android:layout_weight="2.5" android:inputType="textEmailAddress"/>
                    <TextView android:textSize="14sp" android:textColor="@color/blue" android:gravity="center_horizontal" android:id="@+id/tv_email_edit" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/edit" android:layout_weight="0.5"/>
                </LinearLayout>
                <TextView android:gravity="center_horizontal" android:id="@+id/email_verify" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/verify_emailid"/>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:weightSum="6">
                    <EditText android:gravity="center_horizontal" android:id="@+id/et_email_otp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="2dp" android:hint="@string/enter_otp_sent_to_your_emailid" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="6" android:inputType="number"/>
                </LinearLayout>
                <TextView android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_resend_mail_timmer" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:hint="" android:singleLine="true" android:windowSoftInputMode="adjustResize"/>
                <TextView android:textSize="14sp" android:textColor="@color/blue" android:gravity="center_horizontal" android:id="@+id/bt_gen_email_otp" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/send_otp"/>
                <TextView android:textColor="@color/dark_black" android:gravity="center_horizontal" android:id="@+id/tv_verify_email" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Please enter the OTP received via EMAIL at registered email id:" android:layout_marginHorizontal="5dp" android:paddingHorizontal="5dp"/>
                <View android:layout_width="match_parent" android:layout_height="50dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <RelativeLayout android:id="@+id/bottom" android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:elevation="5dp">
        <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/verify" android:background="@drawable/round_red_fill" android:paddingLeft="20dp" android:paddingTop="10dp" android:paddingRight="20dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="7dp" android:text="@string/verification_user" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
    </RelativeLayout>
</RelativeLayout>
