<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/bottom" android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="10dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/update_profile" android:background="@drawable/round_red_fill" android:paddingLeft="17dp" android:paddingTop="10dp" android:paddingRight="17dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/update_profile" android:layout_centerInParent="true" android:fontFamily="@font/open_sans_semibold"/>
    </RelativeLayout>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/bottom" android:layout_below="@+id/header">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:padding="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:textSize="12sp" android:textColor="@color/darkGrey" android:id="@+id/tv_username" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:focusable="false" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:hint="@string/username" android:inputType="none" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="12sp" android:textColor="@color/dark" android:id="@+id/et_full_name" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:hint="@string/full_name" android:fontFamily="@font/open_sans_semibold" android:layout_marginEnd="4dp"/>
            <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="@color/dark" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/name_updated_info" android:fontFamily="@font/open_sans_bold"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp">
                <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="left" android:id="@+id/et_dob" android:background="@drawable/edittextborder" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginRight="1dp" android:hint="@string/dob_registration" android:layout_weight="1.4" android:inputType="number" android:fontFamily="@font/open_sans_semibold" android:drawableTint="@color/lightdark"/>
                <RadioGroup android:layout_gravity="bottom" android:orientation="horizontal" android:id="@+id/ll_gender" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginBottom="5dp" android:layout_weight="0.8">
                    <RadioButton android:textSize="12dp" android:textColor="@color/lightdark" android:id="@+id/tv_male" android:paddingLeft="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/radiobutton" android:text="@string/male_radio_btn" android:layout_weight="1" android:contentDescription="@string/Male" android:fontFamily="@font/open_sans"/>
                    <RadioButton android:textSize="12dp" android:textColor="@color/lightdark" android:id="@+id/tv_female" android:paddingLeft="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/radiobutton" android:text="@string/female_radio_btn" android:layout_weight="1" android:contentDescription="@string/female" android:fontFamily="@font/open_sans"/>
                    <RadioButton android:textSize="12dp" android:textColor="@color/lightdark" android:id="@+id/tv_transgender" android:paddingLeft="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:button="@drawable/radiobutton" android:text="@string/trans_radio_btn" android:layout_weight="1" android:contentDescription="@string/transgender" android:fontFamily="@font/open_sans"/>
                </RadioGroup>
                <EditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_gender" android:background="@drawable/edittextborder" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="@dimen/size10" android:layout_marginRight="15dp" android:hint="@string/Gender" android:layout_weight="1" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_ocupation" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:focusable="false" android:visibility="gone" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:hint="@string/occupation" android:inputType="none" android:fontFamily="@font/open_sans_semibold"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:weightSum="2">
                <EditText android:textSize="12sp" android:textColor="@color/dark" android:id="@+id/bt_edit_email" android:background="@drawable/edittextborder" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="Email ID" android:layout_weight="2" android:inputType="textEmailAddress" android:fontFamily="@font/open_sans_semibold" android:layout_marginEnd="15dp"/>
                <TextView android:textSize="10dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/bt_update_email" android:background="@drawable/round_red_fill" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tv_edit_email_msg" android:paddingBottom="0dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_marginRight="15dp"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:weightSum="2">
                <TextView android:textSize="12dp" android:textColor="@color/darkGrey" android:gravity="center" android:id="@+id/tv_isd" android:background="@drawable/edittextborder" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginRight="15dp" android:fontFamily="@font/open_sans_semibold"/>
                <EditText android:textSize="12sp" android:textColor="@color/dark" android:id="@+id/bt_edit_mobile" android:background="@drawable/edittextborder" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="Mobile Number" android:maxLength="10" android:layout_weight="2" android:inputType="number" android:fontFamily="@font/open_sans_semibold" android:layout_marginEnd="15dp"/>
                <TextView android:textSize="10dp" android:textColor="@color/white" android:gravity="center" android:layout_gravity="center" android:id="@+id/bt_update_mobile" android:background="@drawable/round_red_fill" android:paddingLeft="12dp" android:paddingTop="6dp" android:paddingRight="12dp" android:paddingBottom="6dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/update" android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
            <TextView android:textSize="10dp" android:textStyle="bold" android:textColor="@color/red" android:id="@+id/tv_edit_mobile_msg" android:paddingBottom="0dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:layout_marginRight="15dp"/>
            <TextView android:textSize="10sp" android:textStyle="bold" android:textColor="@color/dark" android:background="@color/light_blue" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10sp" android:text="@string/can_be_updated_once" android:fontFamily="@font/open_sans_semibold"/>
            <View android:id="@+id/view1" android:background="@color/black" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="@dimen/size15"/>
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/black_80_opa" android:paddingBottom="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size15" android:layout_marginRight="15dp" android:text="@string/residential_Address"/>
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_address" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:text="" android:hint="@string/address1" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/et_address2" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:text="" android:hint="@string/Address_Lane_2" android:fontFamily="@font/open_sans_semibold"/>
            <EditText android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/et_pincode_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:text="" android:hint="@string/pin_code1" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/city_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:text="" android:hint="@string/city1" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/et_state_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:hint="@string/state1" android:fontFamily="@font/open_sans_semibold"/>
            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/post_office_reg" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="15dp" android:hint="@string/post_office1" android:drawableRight="@drawable/spinner_downwards" android:fontFamily="@font/open_sans_semibold"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10">
                <CheckBox android:textSize="13dp" android:textColor="@color/dark" android:layout_gravity="start" android:id="@+id/promotional_chkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10" android:checked="false" android:button="@drawable/irctc_checkbox"/>
                <TextView android:textSize="@dimen/dp_12" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size5" android:text="@string/promotional_communications" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/size10">
                <CheckBox android:textSize="@dimen/dp_12" android:textColor="@color/dark" android:id="@+id/tandc_chkbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:button="@drawable/irctc_checkbox" android:contentDescription="I have read and agree to Terms and Conditions"/>
                <TextView android:textSize="@dimen/dp_12" android:textColor="@color/dark" android:id="@+id/tandc_tv" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/size5" android:text="@string/I_agree_to_tndc" android:fontFamily="@font/open_sans"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <FrameLayout android:id="@+id/parentLayout" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/otpLayout" android:background="@color/TransparentBACKGROUND_COLOR20" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ScrollView android:background="@drawable/below_popup_white_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                <LinearLayout android:orientation="vertical" android:background="@drawable/below_popup_white_bg" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                    <TextView android:textSize="@dimen/size15" android:textStyle="bold" android:textColor="@color/black_80_opa" android:gravity="center" android:layout_gravity="center_vertical" android:id="@+id/input_label" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:textAllCaps="true" android:fontFamily="@font/open_sans_semibold" android:textAlignment="center"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp">
                        <EditText android:textSize="14sp" android:textColor="@color/dark" android:textColorHint="@color/colorAccent" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/et_input" android:background="@drawable/edittextborder" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:hint="@string/otp" android:singleLine="true" android:maxLength="@integer/otp_max_length" android:digits="0123456789" android:layout_weight="1" android:inputType="number" android:fontFamily="@font/open_sans_semibold"/>
                    </LinearLayout>
                    <TextView android:textSize="13dp" android:textColor="@color/dark" android:textColorHint="@color/dark" android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/tv_resend_mob_timmer" android:paddingLeft="10dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="5dp" android:layout_marginRight="20dp" android:layout_marginBottom="5dp" android:hint="" android:singleLine="true" android:windowSoftInputMode="adjustResize"/>
                    <TextView android:textSize="12dp" android:textColor="@color/blue" android:gravity="center" android:layout_gravity="center" android:id="@+id/generate_otp" android:paddingLeft="17dp" android:paddingRight="17dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginBottom="@dimen/size10" android:text="@string/resend_otp" android:fontFamily="@font/open_sans_semibold"/>
                    <RelativeLayout android:background="@color/bottom_dark" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/cancel_otp" android:background="@drawable/round_red_fill" android:paddingLeft="38dp" android:paddingRight="38dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginLeft="@dimen/size20" android:text="@string/cancel" android:fontFamily="@font/open_sans_semibold"/>
                        <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/confirm_otp" android:background="@drawable/round_red_fill" android:paddingLeft="38dp" android:paddingRight="38dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginRight="@dimen/size20" android:text="@string/submit" android:fontFamily="@font/open_sans_semibold" android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
