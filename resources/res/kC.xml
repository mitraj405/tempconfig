                    <TextView android:textSize="10dp" android:textColor="@color/lightdark" android:id="@+id/tv_thursday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginBottom="2dp" android:text="" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_friday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginBottom="2dp" android:text="" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="10dp" android:textColor="@color/lightdark" android:id="@+id/tv_saturday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginBottom="2dp" android:text="" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="10dp" android:textColor="@color/dark" android:id="@+id/tv_sunday" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:layout_marginBottom="2dp" android:text="" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
                <LinearLayout android:gravity="right" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
