            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/rv_availability_list" android:background="@color/class_backgroundcolor" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="10dp" ads:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
