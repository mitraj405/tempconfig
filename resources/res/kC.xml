                    <View android:layout_gravity="center" android:background="@color/lightdark" android:layout_width="20dp" android:layout_height="1dp" android:layout_marginRight="4dp"/>
                    <TextView android:textSize="15dp" android:textColor="@color/lightdark" android:id="@+id/travel_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="h m" android:lineSpacingMultiplier="0.7" android:fontFamily="@font/open_sans"/>
                    <View android:background="@color/lightdark" android:layout_width="20dp" android:layout_height="1dp" android:layout_marginLeft="4dp"/>
                </LinearLayout>
                <TextView android:textSize="17dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/arv_time" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="hh:mi" android:layout_weight="1" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold"/>
