                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/tv_to_city_code" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="(Stncode)" android:textAllCaps="true" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="right" android:id="@+id/tv_arr_date" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Day dd,Mon" android:fontFamily="@font/open_sans"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp">
                <androidx.recyclerview.widget.RecyclerView android:orientation="horizontal" android:id="@+id/rv_class_fare_avl" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginStart="10dp" ads:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/avl_other_date_ll" android:background="@color/class_backgroundcolor" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="2">
