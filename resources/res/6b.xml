<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="#efeff4" android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:background="@color/white" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
                <EditText android:textSize="15dp" android:textColor="@color/dark" android:gravity="center" android:layout_gravity="center" android:id="@+id/tv_pnr" android:background="@drawable/edittextborder" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="" android:hint="@string/enter_train_number" android:lines="1" android:maxLength="5" android:digits="0123456789" android:inputType="number" android:fontFamily="@font/open_sans"/>
                <TextView android:textSize="10dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_search" android:background="@drawable/round_red_fill" android:paddingLeft="20dp" android:paddingTop="8dp" android:paddingRight="20dp" android:paddingBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/train_schedule_search" android:layout_centerInParent="true" android:textAllCaps="true" android:fontFamily="@font/open_sans_bold" android:layout_marginVertical="10dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="vertical" android:id="@+id/route_ll" android:visibility="gone" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
                    <View android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="5dp"/>
                    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp">
                        <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="@color/dark" android:layout_gravity="center" android:id="@+id/tv_train_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:fontFamily="@font/open_sans_semibold"/>
                        <LinearLayout android:orientation="horizontal" android:paddingLeft="50dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginBottom="3dp" android:layout_alignParentRight="true" android:layout_alignParentBottom="true">
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on" android:background="@color/white" android:paddingRight="1dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="Runs on " android:fontFamily="@font/open_sans"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Mon" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="M" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Tue" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="T" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Wed" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="W" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Thu" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="T" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Fri" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="F" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Sat" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="S" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                            <TextView android:textSize="12dp" android:textColor="@color/dark" android:id="@+id/tv_runs_on_Sun" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="S" android:fontFamily="@font/open_sans_semibold" android:paddingHorizontal="2dp"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:layout_marginRight="15dp" android:layout_marginBottom="8dp">
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/station_Name" android:layout_weight="5.5" android:fontFamily="@font/open_sans_semibold"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Arr_Time" android:layout_weight="1.7" android:fontFamily="@font/open_sans_semibold"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Dep_Time" android:layout_weight="1.7" android:fontFamily="@font/open_sans_semibold"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Day" android:layout_weight="1" android:fontFamily="@font/open_sans_semibold"/>
                        <TextView android:textSize="12dp" android:textColor="@color/dark" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/Dist" android:layout_weight="1.5" android:fontFamily="@font/open_sans_semibold"/>
                    </LinearLayout>
                    <androidx.core.widget.NestedScrollView android:background="#efeff4" android:layout_width="match_parent" android:layout_height="wrap_content">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                            <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                            <androidx.recyclerview.widget.RecyclerView android:id="@+id/rv_station_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                            <View android:background="@color/lightdark" android:layout_width="match_parent" android:layout_height="0.5dp"/>
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
