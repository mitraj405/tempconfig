<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:ads="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:id="@+id/travel_insurance_rl" android:background="@color/white" android:padding="10dp" android:paddingLeft="15dp" android:paddingRight="15dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/dark" android:id="@+id/tv_travel_Insurance_heading" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Travel_Insurance" android:fontFamily="@font/open_sans_bold"/>
        </RelativeLayout>
        <View android:background="@color/light_gray" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <RelativeLayout android:background="@color/white" android:padding="15dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="0dp">
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:orientation="horizontal" android:paddingRight="15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="@string/Travel_Insurance_Opted" android:fontFamily="@font/open_sans_bold"/>
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:id="@+id/travel_insurance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="" android:layout_alignParentRight="true" android:fontFamily="@font/open_sans"/>
                </RelativeLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/insurance_compay_name_ll" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:id="@+id/insurance_compay_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Travel_Insured" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:gravity="right" android:layout_gravity="right" android:id="@+id/tv_travel_Insurance_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="" android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>
                <RelativeLayout android:orientation="horizontal" android:id="@+id/passenger_name_rl" android:paddingRight="15dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="" android:fontFamily="@font/open_sans"/>
                    <TextView android:textSize="14dp" android:textColor="@color/dark" android:id="@+id/tv_passenger_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="" android:fontFamily="@font/open_sans_bold"/>
                </RelativeLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/ll_fill_nominee_details" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="14dp" android:textColor="@color/blue" android:id="@+id/tv_fill_nominee_details" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="" android:fontFamily="@font/open_sans_bold"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
